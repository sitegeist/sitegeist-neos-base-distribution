prototype(Neos.Neos:ContentCollectionRenderer) {
    itemRenderer {
        default.type = ${String.split(node.nodeType.name, ':')[0] + ':ContentSlot'}
    }

    itemRenderer.@process.addAnchor = Neos.Fusion:Augmenter {
        id = ${q(node).property('anchorID')}
    }
    itemRenderer.@process.addAnchor.@if.hasAnchor = ${q(node).property('anchorID')}
}
