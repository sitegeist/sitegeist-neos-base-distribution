{
  "name": "@vendor/site",
  "version": "1.0.0",
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack -w --mode development",
    "lint": "concurrently 'yarn lint:js' 'yarn lint:css'",
    "lint:css": "stylelint 'Resources/Private/**/*.css'",
    "lint:js": "eslint 'Resources/Private/**/*.ts'",
    "test": "echo \"Error: no test specified\""
  },
  "devDependencies": {
    "@sitegeist/es-neos-stylelint": "^2.0.2",
    "@sitegeist/eslint-config-es-neos-eslint": "^2.0.2",
    "@types/css-minimizer-webpack-plugin": "^1.1.3",
    "@types/mini-css-extract-plugin": "^1.2.3",
    "@types/node": "^14.14.36",
    "@types/terser-webpack-plugin": "^5.0.3",
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.2.1",
    "css-loader": "^5.2.0",
    "css-minimizer-webpack-plugin": "^1.3.0",
    "eslint": "^7.22.0",
    "glob": "^7.1.6",
    "mini-css-extract-plugin": "^1.3.9",
    "node": "^15.10.0",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "postcss-custom-media": "^8.0.0",
    "postcss-discard-duplicates": "^4.0.2",
    "postcss-loader": "^5.2.0",
    "postcss-media-minmax": "^5.0.0",
    "postcss-mixins": "^7.0.3",
    "postcss-modules": "^4.0.0",
    "precss": "^4.0.0",
    "stylelint": "^13.12.0",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.7.0"
  },
  "stylelint": {
    "extends": [
      "@sitegeist/es-neos-stylelint"
    ],
    "rules": {
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind"
          ]
        }
      ]
    }
  }
}
